@model ParteFrontProyectoDSW1.Contracts.Dtos.LoginDto

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-page-container">
    <div class="login-box">
        <div class="login-header mb-5 text-center">
            <div class="apple-icon-wrapper mb-4">
                <i class="bi bi-apple"></i>
            </div>
            <h1 class="fw-bold h2 mb-2">Inicia sesión en la <br><span>Apple Store</span></h1>
            <p class="text-muted">Gestiona tus pedidos y descubre ofertas exclusivas.</p>
        </div>

        <form asp-action="Login" method="post" class="needs-validation">

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control custom-input" placeholder="nombre@ejemplo.com" autocomplete="email" required />
                <label asp-for="Email">Correo electrónico</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="PasswordHash" type="password" class="form-control custom-input" placeholder="Contraseña" autocomplete="current-password" required />
                <label asp-for="PasswordHash">Contraseña</label>
                <span asp-validation-for="PasswordHash" class="text-danger small"></span>
            </div>

            <div class="text-end mb-4">
                <a href="#" class="text-decoration-none small text-primary-orange fw-medium">¿Olvidaste tu contraseña?</a>
            </div>

            <button type="submit" class="btn btn-login-submit py-3 mb-4">
                Continuar
            </button>
        </form>

        <div class="divider mb-4">
            <span>o</span>
        </div>

        <div class="login-footer text-center">
            <p class="mb-0 text-muted">¿No tienes una cuenta?</p>
            <a asp-action="Register" asp-controller="Account" class="register-link">Crea la tuya ahora</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    :root {
        --apple-orange: #ff6a00;
        --apple-bg: #ffffff;
        --apple-light-bg: #f5f5f7;
        --apple-text: #1d1d1f;
        --apple-muted: #86868b;
        --radius-apple: 18px;
    }

    .login-page-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .login-box {
        width: 100%;
        max-width: 440px;
        padding: 40px;
        background: #fff;
        border-radius: 30px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.05);
        animation: fadeIn 0.6s ease-out;
    }

    .apple-icon-wrapper {
        font-size: 3rem;
        color: var(--apple-text);
    }

    .login-header h1 span {
        color: var(--apple-orange);
    }

    .form-floating > .custom-input {
        height: 60px;
        border-radius: 12px;
        border: 1px solid #d2d2d7;
        padding-top: 1.625rem;
        padding-bottom: 0.625rem;
        font-weight: 500;
        background-color: transparent;
        transition: all 0.2s ease;
    }

        .form-floating > .custom-input:focus {
            border-color: var(--apple-orange);
            box-shadow: 0 0 0 4px rgba(255, 106, 0, 0.1);
            background-color: #fff;
        }

    .btn-login-submit {
        width: 100%;
        background-color: var(--apple-orange);
        color: #fff;
        border: none;
        border-radius: 14px;
        font-weight: 600;
        font-size: 1.05rem;
        transition: all 0.3s ease;
    }

        .btn-login-submit:hover {
            background-color: #e55f00;
            transform: translateY(-1px);
            box-shadow: 0 8px 20px rgba(255, 106, 0, 0.2);
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        color: var(--apple-muted);
    }

        .divider::before, .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e5e5e5;
        }

        .divider span {
            padding: 0 15px;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

    .text-primary-orange {
        color: var(--apple-orange);
    }

    .register-link {
        color: var(--apple-orange);
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        display: inline-block;
        margin-top: 5px;
    }

        .register-link:hover {
            text-decoration: underline;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 576px) {
        .login-box {
            padding: 30px 20px;
            box-shadow: none; 
            background: transparent;
        }
    }
</style>