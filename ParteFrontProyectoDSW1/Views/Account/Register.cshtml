@model ParteFrontProyectoDSW1.Contracts.Dtos.UsuarioLoginDto

@{
    ViewData["Title"] = "Crea tu cuenta";
}

<div class="register-page-container">
    <div class="register-box">
        <div class="register-header mb-5 text-center">
            <div class="apple-icon-wrapper mb-4">
                <i class="bi bi-person-plus"></i>
            </div>
            <h1 class="fw-bold h2 mb-2">Crea tu <span>Apple ID</span></h1>
            <p class="text-muted">Una sola cuenta para comprar todo lo que amas.</p>
        </div>

        <form asp-action="Register" method="post" class="needs-validation">

            <div class="form-floating mb-3">
                <input asp-for="Nombre" class="form-control custom-input" placeholder="Tu nombre" required />
                <label asp-for="Nombre">Nombre completo</label>
                <span asp-validation-for="Nombre" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control custom-input" placeholder="nombre@ejemplo.com" autocomplete="email" required />
                <label asp-for="Email">Correo electrónico</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="PasswordHash" type="password" class="form-control custom-input" placeholder="Contraseña" required />
                <label asp-for="PasswordHash">Contraseña</label>
                <span asp-validation-for="PasswordHash" class="text-danger small"></span>
            </div>

            <div class="terms-text mb-4 text-center">
                <p class="small text-muted">
                    Al registrarte, aceptas nuestras <a href="#" class="text-orange text-decoration-none">Políticas de Privacidad</a> y condiciones de servicio.
                </p>
            </div>

            <button type="submit" class="btn btn-register-submit py-3 mb-4">
                Crear cuenta
            </button>
        </form>

        <div class="divider mb-4">
            <span>o</span>
        </div>

        <div class="register-footer text-center">
            <p class="mb-0 text-muted">¿Ya tienes una cuenta?</p>
            <a asp-action="Login" asp-controller="Account" class="login-link">Inicia sesión ahora</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    :root {
        --apple-orange: #ff6a00;
        --apple-text: #1d1d1f;
        --apple-muted: #86868b;
    }

    .register-page-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }


    .register-box {
        width: 100%;
        max-width: 460px;
        padding: 45px;
        background: #fff;
        border-radius: 30px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.05);
        animation: slideUp 0.6s ease-out;
    }

    .apple-icon-wrapper {
        font-size: 2.8rem;
        color: var(--apple-text);
    }

    .register-header h1 span {
        color: var(--apple-orange);
    }

    .form-floating > .custom-input {
        height: 60px;
        border-radius: 12px;
        border: 1px solid #d2d2d7;
        font-weight: 500;
        background-color: transparent;
        transition: all 0.2s ease;
    }

        .form-floating > .custom-input:focus {
            border-color: var(--apple-orange);
            box-shadow: 0 0 0 4px rgba(255, 106, 0, 0.1);
        }

    .btn-register-submit {
        width: 100%;
        background-color: var(--apple-orange);
        color: #fff;
        border: none;
        border-radius: 14px;
        font-weight: 600;
        font-size: 1.05rem;
        transition: all 0.3s ease;
    }

        .btn-register-submit:hover {
            background-color: #e55f00;
            transform: translateY(-1px);
            box-shadow: 0 8px 20px rgba(255, 106, 0, 0.2);
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        color: var(--apple-muted);
    }

        .divider::before, .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e5e5e5;
        }

        .divider span {
            padding: 0 15px;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

    .text-orange {
        color: var(--apple-orange);
        font-weight: 500;
    }

    .login-link {
        color: var(--apple-orange);
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        display: inline-block;
        margin-top: 5px;
    }

        .login-link:hover {
            text-decoration: underline;
        }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 576px) {
        .register-box {
            padding: 30px 20px;
            box-shadow: none;
            background: transparent;
        }
    }
</style>