@using ParteFrontProyectoDSW1.Contracts.Dtos
@using ParteFrontProyectoDSW1.Helpers
@{
    var usuario = Context.Session.GetObject<LoginResponseDto>("CurrentUser");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tienda FinoFac</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --primary-color: #ff6a00;
            --apple-bg: #f5f5f7;
            --nav-bg: rgba(255, 255, 255, 0.85);
            --text-dark: #1d1d1f;
            --text-muted: #86868b;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: var(--apple-bg);
            font-family: 'Inter', sans-serif;
            color: var(--text-dark);
            -webkit-font-smoothing: antialiased;
        }

        .navbar {
            background-color: var(--nav-bg) !important;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(0,0,0,0.05) !important;
            padding: 0.7rem 0;
            z-index: 1030;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.2rem;
            color: var(--text-dark) !important;
        }

            .navbar-brand span {
                color: var(--primary-color);
            }

        .nav-link {
            font-weight: 500;
            color: var(--text-dark) !important;
            padding: 0.5rem 1rem !important;
            font-size: 0.9rem;
            transition: var(--transition);
        }

            .nav-link:hover {
                color: var(--primary-color) !important;
            }

        .nav-icon {
            font-size: 1.2rem;
            position: relative;
        }

        #carritoBadge {
            position: absolute;
            top: -2px;
            right: -8px;
            background-color: var(--primary-color);
            font-size: 0.65rem;
            padding: 0.25em 0.5em;
            font-weight: 700;
            border: 2px solid #fff;
        }

        .user-dropdown-btn {
            background: transparent;
            border: none;
            padding: 6px 12px;
            border-radius: 50px;
            transition: var(--transition);
        }

            .user-dropdown-btn:hover {
                background: rgba(0,0,0,0.04);
            }

        .dropdown-menu {
            border: none;
            border-radius: 18px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            padding: 8px;
            margin-top: 12px;
        }

        .dropdown-item {
            border-radius: 10px;
            padding: 10px 15px;
            font-weight: 500;
            font-size: 0.9rem;
        }

            .dropdown-item:hover {
                background-color: var(--apple-bg);
                color: var(--primary-color);
            }

        footer {
            background: #fff;
            border-top: 1px solid rgba(0,0,0,0.05);
            padding-top: 60px;
        }

        .footer-title {
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text-dark);
            margin-bottom: 20px;
        }

        .footer-link {
            display: block;
            color: var(--text-muted);
            text-decoration: none;
            margin-bottom: 10px;
            font-size: 0.9rem;
            transition: var(--transition);
        }

            .footer-link:hover {
                color: var(--primary-color);
                padding-left: 4px;
            }

        .footer-bottom {
            margin-top: 50px;
            padding: 20px 0;
            border-top: 1px solid rgba(0,0,0,0.05);
            font-size: 0.8rem;
            color: var(--text-muted);
        }

        main {
            flex: 1 0 auto;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(8px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .animate-fade {
            animation: fadeIn 0.4s ease-out;
        }
    </style>
</head>
<body>

    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-apple me-2"></i>Tienda FinoFac <span>Ecommerce</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav mx-auto">
                        @if (usuario != null && usuario.Rol == "ADMIN")
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold text-primary" asp-controller="Admin" asp-action="PagosDetallado">
                                    <i class="bi bi-shield-lock me-1"></i> Panel Administración
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Support">Soporte</a></li>
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        @if (usuario == null || usuario.Rol != "ADMIN")
                        {
                            <a id="btnCarrito" asp-controller="Cart" asp-action="Index" class="nav-link nav-icon px-2">
                                <i class="bi bi-bag"></i>
                                <span id="carritoBadge" class="badge rounded-pill shadow-sm" style="display:none;">0</span>
                            </a>
                        }

                        @if (usuario == null)
                        {
                            <div class="dropdown">
                                <a class="nav-link nav-icon px-2" href="#" id="loginDropdown" data-bs-toggle="dropdown">
                                    <i class="bi bi-person"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Login"><i class="bi bi-box-arrow-in-right me-2"></i> Iniciar sesión</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus me-2"></i> Crear cuenta</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="dropdown">
                                <button class="user-dropdown-btn d-flex align-items-center gap-2" type="button" id="userMenu" data-bs-toggle="dropdown">
                                    <div class="bg-dark text-white rounded-circle d-flex align-items-center justify-content-center" style="width:30px; height:30px; font-size: 0.75rem;">
                                        @usuario.Nombre.Substring(0, 1).ToUpper()
                                    </div>
                                    <span class="fw-semibold small d-none d-sm-inline">@usuario.Nombre</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                    <li class="px-3 py-2 small text-muted text-uppercase fw-bold" style="font-size: 0.6rem;">@usuario.Rol</li>
                                    <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index"><i class="bi bi-clock-history me-2"></i> Mis Pedidos</a></li>
                                    <li><hr class="dropdown-divider opacity-50"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión</a></li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="animate-fade">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4 text-center text-lg-start">
                    <h5 class="navbar-brand mb-4 d-block"><i class="bi bi-apple me-2"></i>Tienda FinoFac <span>Ecommerce</span></h5>
                    <p class="text-muted small">Tu destino premium para tecnología en Perú. Garantía oficial y soporte especializado.</p>
                </div>
                <div class="col-6 col-lg-2 offset-lg-2">
                    <h6 class="footer-title">Tienda</h6>
                    <a href="/" class="footer-link">Inicio</a>
                    <a href="/Productos" class="footer-link">Productos</a>
                </div>
                <div class="col-6 col-lg-2">
                    <h6 class="footer-title">Soporte</h6>
                    <a href="/Home/Support" class="footer-link">Ayuda</a>
                    <a href="#" class="footer-link">Envíos</a>
                </div>
                <div class="col-lg-2 text-center text-lg-start">
                    <h6 class="footer-title">Contacto</h6>
                    <p class="small text-muted mb-1">ventas@finofac.com</p>
                    <p class="small text-muted">Lima, Perú</p>
                </div>
            </div>
            <div class="footer-bottom text-center">
                <p class="mb-0">© @DateTime.Now.Year Tienda FinoFac. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        async function actualizarCarrito() {
            try {
                const response = await fetch('/Cart/TotalItems');
                if (response.ok) {
                    const total = await response.text();
                    const badge = document.getElementById('carritoBadge');
                    if (badge) {
                        badge.textContent = total;
                        badge.style.display = parseInt(total) > 0 ? 'inline-block' : 'none';
                    }
                }
            } catch (err) { }
        }
        document.addEventListener('DOMContentLoaded', actualizarCarrito);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
