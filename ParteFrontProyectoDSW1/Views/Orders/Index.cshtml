@{
    ViewData["Title"] = "Mis Pedidos";
}

<div class="container mt-5 pb-5">
    <div class="row mb-5">
        <div class="col-12">
            <h1 class="fw-bold display-5">Tus <span>pedidos.</span></h1>
            <p class="text-muted">Revisa el estado y los detalles de todas tus compras.</p>
        </div>
    </div>

    <!-- Contenedor de Órdenes -->
    <div id="ordenesContainer" class="row g-4">
        <div class="col-12 text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-muted">Buscando tus compras...</p>
        </div>
    </div>
</div>

<!-- MODAL DETALLE DE PAGO (Diseño Factura) -->
<div class="modal fade" id="detallePagoModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content receipt-modal border-0">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body px-md-5 pb-5" id="detallePagoBody">
                <!-- Se llena por JS -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let pagos = [];

        (async () => {
            const container = document.getElementById('ordenesContainer');

            try {
                const res = await fetch('/Orders/PagoHistorialAjax');
                const result = await res.json();

                if (!result.success || !result.data || result.data.length === 0) {
                    container.innerHTML = `
                        <div class="col-12 text-center py-5">
                            <i class="bi bi-box-seam display-1 text-muted opacity-25"></i>
                            <h3 class="mt-4 fw-bold">Aún no tienes pedidos</h3>
                            <p class="text-muted">Cuando realices una compra, aparecerá aquí.</p>
                            <a href="/Productos" class="btn btn-primary btn-apple mt-3">Empezar a comprar</a>
                        </div>`;
                    return;
                }

                pagos = result.data;
                const ordenesUnicas = [...new Set(pagos.map(p => p.idOrden))];

                container.innerHTML = ordenesUnicas.map(idOrden => {
                    const info = pagos.find(p => p.idOrden === idOrden);
                    const fecha = new Date(info.fechaPago).toLocaleDateString('es-PE', { day:'2-digit', month:'long', year:'numeric' });
                    const isSuccess = info.estado === "Exitoso";

                    return `
                        <div class="col-md-6 col-lg-4">
                            <div class="order-card h-100">
                                <div class="order-card-header">
                                    <div class="status-icon ${isSuccess ? 'success' : 'pending'}">
                                        <i class="bi ${isSuccess ? 'bi-check-lg' : 'bi-clock'}"></i>
                                    </div>
                                    <div class="ms-3">
                                        <p class="mb-0 text-muted small">Orden #${info.idOrden}</p>
                                        <p class="mb-0 fw-bold">${fecha}</p>
                                    </div>
                                </div>
                                <div class="order-card-body">
                                    <div class="d-flex justify-content-between align-items-end">
                                        <div>
                                            <p class="mb-1 text-muted small">Total pagado</p>
                                            <h4 class="fw-bold mb-0">S/ ${info.monto.toFixed(2)}</h4>
                                        </div>
                                        <button class="btn btn-view-detail" onclick="verDetalle(${idOrden})" data-bs-toggle="modal" data-bs-target="#detallePagoModal">
                                            Detalles <i class="bi bi-chevron-right ms-1"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');

            } catch {
                container.innerHTML = `<div class="alert alert-danger rounded-4">Error al conectar con el servidor.</div>`;
            }
        })();

        function verDetalle(idOrden) {
            const items = pagos.filter(p => p.idOrden === idOrden);
            const base = items[0];
            const fecha = new Date(base.fechaPago).toLocaleString();

            const filasHtml = items.map(p => `
                <div class="receipt-item">
                    <div class="receipt-item-info">
                        <p class="mb-0 fw-bold text-dark">${p.producto}</p>
                        <p class="mb-0 text-muted small">${p.cantidad} unidad(es) x S/ ${p.precioUnitario.toFixed(2)}</p>
                    </div>
                    <div class="receipt-item-price fw-semibold">
                        S/ ${p.subTotal.toFixed(2)}
                    </div>
                </div>
            `).join('');

            document.getElementById('detallePagoBody').innerHTML = `
                <div class="text-center mb-5">
                    <i class="bi bi-apple fs-1 mb-3"></i>
                    <h2 class="fw-bold mb-1">Recibo de Compra</h2>
                    <p class="text-muted">Apple Store Ecommerce</p>
                </div>

                <div class="receipt-meta mb-4">
                    <div class="row g-3">
                        <div class="col-6">
                            <p class="mb-0 text-muted small text-uppercase fw-bold">ID de Orden</p>
                            <p class="fw-semibold">#${base.idOrden}</p>
                        </div>
                        <div class="col-6 text-end">
                            <p class="mb-0 text-muted small text-uppercase fw-bold">Fecha</p>
                            <p class="fw-semibold">${fecha}</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-0 text-muted small text-uppercase fw-bold">Cliente</p>
                            <p class="fw-semibold">${base.usuario}</p>
                        </div>
                        <div class="col-6 text-end">
                            <p class="mb-0 text-muted small text-uppercase fw-bold">Método</p>
                            <p class="fw-semibold">${base.metodo}</p>
                        </div>
                    </div>
                </div>

                <div class="receipt-items-container mb-4">
                    <p class="text-muted small text-uppercase fw-bold mb-3">Artículos</p>
                    ${filasHtml}
                </div>

                <div class="receipt-total pt-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Subtotal</span>
                        <span class="fw-semibold">S/ ${base.monto.toFixed(2)}</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="text-muted">Envío</span>
                        <span class="text-success fw-semibold">Gratis</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="fw-bold mb-0">Total del pedido</h4>
                        <h3 class="fw-bold text-orange mb-0">S/ ${base.monto.toFixed(2)}</h3>
                    </div>
                </div>

                <div class="text-center mt-5">
                    <button class="btn btn-outline-dark btn-sm rounded-pill px-4" onclick="window.print()">
                        <i class="bi bi-printer me-2"></i> Imprimir Recibo
                    </button>
                </div>
            `;
        }
    </script>
}

<style>
    :root {
        --apple-orange: #ff6a00;
        --apple-bg: #f5f5f7;
        --apple-text: #1d1d1f;
        --apple-muted: #86868b;
        --radius: 22px;
    }

    h1 span {
        color: var(--apple-orange);
    }

    /* ORDER CARDS */
    .order-card {
        background: #fff;
        border-radius: var(--radius);
        padding: 24px;
        border: 1px solid rgba(0,0,0,0.05);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .order-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.08);
        }

    .order-card-header {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 1px solid #f5f5f7;
    }

    .status-icon {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

        .status-icon.success {
            background: #e6f4ea;
            color: #1e8e3e;
        }

        .status-icon.pending {
            background: #fef7e0;
            color: #f9ab00;
        }

    .btn-view-detail {
        background: none;
        border: none;
        color: var(--apple-orange);
        font-weight: 600;
        font-size: 0.9rem;
        padding: 0;
    }

        .btn-view-detail:hover {
            text-decoration: underline;
        }

    /* RECEIPT MODAL */
    .receipt-modal {
        border-radius: 30px !important;
    }

    .receipt-meta {
        background: #f8f8f9;
        padding: 20px;
        border-radius: 18px;
    }

    .receipt-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #f0f0f2;
    }

        .receipt-item:last-child {
            border-bottom: none;
        }

    .text-orange {
        color: var(--apple-orange);
    }

    .btn-apple {
        background: var(--apple-orange);
        border: none;
        color: white;
        padding: 12px 25px;
        border-radius: 12px;
        font-weight: 600;
    }

    /* Animación de entrada de las tarjetas */
    .order-card {
        animation: slideUp 0.5s ease backwards;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>