@model IEnumerable<ParteFrontProyectoDSW1.Contracts.Entities.Pago>
@{
    ViewData["Title"] = "Administración de Ventas";
}

<div class="container-fluid px-4 py-4 animate-fade">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="fw-bold h2 mb-1">Registro de <span>Transacciones</span></h1>
            <p class="text-muted">Monitoreo global de ingresos y estados de pago.</p>
        </div>
        <div>
            <button class="btn btn-outline-dark rounded-pill px-4" onclick="window.print()">
                <i class="bi bi-printer me-2"></i>Imprimir Reporte
            </button>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="stat-card">
                <span class="stat-label">Ingresos Totales</span>
                <h2 class="stat-value">S/ @Model.Where(x => x.Estado == "Exitoso").Sum(x => x.Monto).ToString("N2")</h2>
                <span class="stat-indicator success"><i class="bi bi-graph-up"></i> +12% este mes</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <span class="stat-label">Ventas Exitosas</span>
                <h2 class="stat-value">@Model.Count(x => x.Estado == "Exitoso")</h2>
                <span class="stat-indicator">Transacciones procesadas</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <span class="stat-label">Ticket Promedio</span>
                @{
                    var promedio = Model.Any() ? Model.Average(x => x.Monto) : 0;
                }
                <h2 class="stat-value">S/ @promedio.ToString("N2")</h2>
                <span class="stat-indicator">Basado en historial</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <span class="stat-label">Producto Estrella</span>
                <h2 class="stat-value" style="font-size: 1.5rem; margin: 14px 0;">@(ViewBag.ProductoMasVendido ?? "Cargando...")</h2>
                <span class="stat-indicator success"><i class="bi bi-star-fill"></i> El más solicitado</span>
            </div>
        </div>
    </div>

    <div class="admin-table-container">
        <div class="table-responsive">
            <table class="table align-middle apple-table">
                <thead>
                    <tr>
                        <th>ID Pago</th>
                        <th>ID Usuario</th>
                        <th>Fecha de Cargo</th>
                        <th>Estado</th>
                        <th class="text-end">Monto Total</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pago in Model)
                    {
                        <tr>
                            <td class="fw-bold">#@pago.IdPago</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="user-avatar-sm me-2">U</div>
                                    <span>Usuario @pago.IdUsuario</span>
                                </div>
                            </td>
                            <td class="text-muted">@pago.FechaPago.ToString("dd MMM, yyyy HH:mm")</td>
                            <td>
                                <span class="badge-status @(pago.Estado == "Exitoso" ? "status-success" : "status-pending")">
                                    @pago.Estado
                                </span>
                            </td>
                            <td class="text-end fw-bold">S/ @pago.Monto.ToString("N2")</td>
                            <td class="text-center">
                                <button class="btn btn-action-view btn-detalle" data-id="@pago.IdPago">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="detalleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 32px; overflow: hidden;">
            <div class="modal-body p-0" id="detalleModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2 text-muted">Obteniendo datos...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --apple-orange: #ff6a00;
        --apple-bg: #f5f5f7;
        --radius: 24px;
    }

    body {
        background-color: var(--apple-bg);
    }

    h1 span {
        color: var(--apple-orange);
    }

    .stat-card {
        background: #fff;
        border-radius: var(--radius);
        padding: 25px;
        border: 1px solid rgba(0,0,0,0.03);
        transition: all 0.3s ease;
        height: 100%;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        }

    .stat-label {
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #86868b;
        letter-spacing: 1px;
    }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 700;
        margin: 10px 0;
        letter-spacing: -1px;
    }

    .stat-indicator {
        font-size: 0.75rem;
        color: #86868b;
    }

        .stat-indicator.success {
            color: #1e8e3e;
            font-weight: 600;
        }

    .admin-table-container {
        background: #fff;
        border-radius: var(--radius);
        padding: 15px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.03);
    }

    .apple-table thead th {
        font-size: 0.7rem;
        text-transform: uppercase;
        color: #86868b;
        padding: 20px 15px;
        border-bottom: 1px solid #f5f5f7;
    }

    .apple-table tbody td {
        padding: 16px 15px;
        border-bottom: 1px solid #f5f5f7;
    }

    .badge-status {
        padding: 6px 14px;
        border-radius: 50px;
        font-size: 0.7rem;
        font-weight: 600;
    }

    .status-success {
        background: #e6f4ea;
        color: #1e8e3e;
    }

    .status-pending {
        background: #fef7e0;
        color: #f9ab00;
    }

    .user-avatar-sm {
        width: 32px;
        height: 32px;
        background: #f0f0f2;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 0.7rem;
        color: #555;
    }

    .btn-action-view {
        background: #f5f5f7;
        border: none;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        color: var(--apple-orange);
        transition: all 0.2s;
    }

        .btn-action-view:hover {
            background: var(--apple-orange);
            color: #fff;
        }

    /* Modal Styles */
    .receipt-header {
        background: #fafafa;
        padding: 40px 30px;
        text-align: center;
        border-bottom: 1px dashed #ddd;
    }

    .receipt-body {
        padding: 30px;
    }

    .receipt-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        font-size: 0.9rem;
    }

    .receipt-total {
        border-top: 2px solid #f5f5f7;
        margin-top: 20px;
        padding-top: 20px;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade {
        animation: fadeIn 0.5s ease-out;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const modalElement = document.getElementById('detalleModal');
            const modalBody = document.getElementById('detalleModalBody');

            document.querySelectorAll('.btn-detalle').forEach(btn => {
                btn.addEventListener('click', function () {
                    const idPago = this.getAttribute('data-id');
                    modalBody.innerHTML = '<div class="text-center py-5"><div class="spinner-border text-warning"></div></div>';
                    const modal = new bootstrap.Modal(modalElement);
                    modal.show();

                    fetch(`/Admin/DetallePago?idPago=${idPago}`)
                        .then(resp => {
                            if (!resp.ok) throw new Error();
                            return resp.json();
                        })
                        .then(detalles => {
                            const productos = detalles.filter(d => d.idPago == idPago);
                            if(productos.length === 0) throw new Error();

                            const data = productos[0];
                            let itemsHtml = productos.map(p => `
                                <div class="receipt-item">
                                    <span class="text-muted">${p.cantidad}x ${p.producto}</span>
                                    <span class="fw-bold">S/ ${p.subTotal.toFixed(2)}</span>
                                </div>
                            `).join('');

                            modalBody.innerHTML = `
                                <div class="receipt-header">
                                    <div class="mb-3">
                                        <i class="bi bi-check-circle-fill text-success fs-1"></i>
                                    </div>
                                    <h4 class="fw-bold mb-0">Comprobante de Pago</h4>
                                    <p class="text-muted small">Transacción #${data.idPago}</p>
                                </div>
                                <div class="receipt-body">
                                    <div class="row mb-4">
                                        <div class="col-6">
                                            <label class="stat-label d-block">Cliente</label>
                                            <span class="fw-bold text-dark">${data.usuario ?? 'N/A'}</span>
                                        </div>
                                        <div class="col-6 text-end">
                                            <label class="stat-label d-block">Fecha</label>
                                            <span class="text-muted small">${data.fechaPago ?? ''}</span>
                                        </div>
                                    </div>

                                    <label class="stat-label d-block mb-3">Resumen de Compra</label>
                                    ${itemsHtml}

                                    <div class="receipt-total d-flex justify-content-between align-items-center">
                                        <span class="fw-bold fs-5">Total Pagado</span>
                                        <span class="fw-bold fs-4 text-dark">S/ ${data.monto.toFixed(2)}</span>
                                    </div>

                                    <div class="mt-4 pt-3 text-center">
                                        <span class="badge-status ${data.estado === 'Exitoso' ? 'status-success' : 'status-pending'}">
                                            Pago ${data.estado}
                                        </span>
                                    </div>

                                    <div class="d-grid mt-4">
                                        <button class="btn btn-dark rounded-pill py-2" data-bs-dismiss="modal">Cerrar Detalle</button>
                                    </div>
                                </div>
                            `;
                        })
                        .catch(err => {
                            modalBody.innerHTML = `
                                <div class="p-5 text-center">
                                    <i class="bi bi-exclamation-circle text-danger fs-1"></i>
                                    <p class="mt-3">No se pudo obtener la información detallada.</p>
                                    <button class="btn btn-sm btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Cerrar</button>
                                </div>`;
                        });
                });
            });
        });
    </script>
}